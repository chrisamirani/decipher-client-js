{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,      // Generates corresponding '.d.ts' file.
    "declarationMap": true    // Creates a source map file for the declarations.
  },
  "type": "module",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}